<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- label: 文本; arrow: 箭头; icon_more: true表示更多图标,至多两个; iconx: 表示在arrow左边的第(x+1)位置的图标 -->
    <declare-styleable name="x_preference">
        <attr name="wo2b_icon" format="reference" />
        <attr name="label" format="reference|string" />
        <attr name="label_ems" format="integer" />
        
        
        <attr name="indicator" format="reference" />
        <attr name="indicator_state">
            <enum name="none" value="-1" />
            <enum name="arrow" value="0" />
            <enum name="checkbox" value="1" />
        </attr>
        <attr name="indicator_align">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
        
        <attr name="enabled" format="boolean" />
        
        <attr name="position">
            <enum name="first" value="1" />
            <enum name="middle" value="2" />
            <enum name="last" value="3" />
            <enum name="top" value="4" />
            <enum name="one" value="5" />
            <enum name="single" value="6" />
        </attr>
        
        <attr name="prefs_key" format="reference|string" />
        <attr name="prefs_default" format="reference|string" />
        <attr name="prefs_value" format="reference|string" />
        
        <attr name="prefs_divider" format="boolean" />
        <attr name="prefs_divider_drawable" format="reference" />
        <attr name="prefs_divider_height" format="reference" />
        
    </declare-styleable>

    
    <!-- X ListView -->
    <declare-styleable name="rocky">
        <attr name="wo2b_divider" format="reference" />
        <attr name="wo2b_dividerHeight" format="reference|integer" />
        <attr name="wo2b_dividerPadding" format="reference|integer" />
    </declare-styleable>
    
    <!-- LableEditText -->
    <declare-styleable name="label_edittext">
        <attr name="wo2b_label" format="reference" />
        <attr name="wo2b_label_ems" format="integer" />
        <attr name="wo2b_hint" format="reference" />
        <attr name="wo2b_hint_color" format="reference" />
        <attr name="wo2b_password" format="boolean" />
        
        <!-- 暂不使用 -->
        <attr name="wo2b_input_type">
       	    <enum name="type_class_text" value="0x00000001"/>
       	    <enum name="type_text_flag_multi_line" value="0x00020000"/>
       	    <enum name="type_text_variation_password" value="0x00000080"/>
        </attr>
    </declare-styleable>
    
</resources>