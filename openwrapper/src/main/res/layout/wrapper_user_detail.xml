<?xml version="1.0" encoding="utf-8"?>
<com.opencdk.view.swiperefresh.SwipeRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshView"
    style="@style/tu_container_common"
    app:srEnable="false"
    app:srScrollbar="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_margin_bottom" >

        <com.wo2b.wrapper.view.XPreference
            android:id="@+id/xp_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/theme_layout_margin_top"
            app:indicator_state="none"
            app:label="@string/username"
            app:position="first" />

        <com.wo2b.wrapper.view.XPreference
            android:id="@+id/xp_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/nickname"
            app:position="middle"
            app:prefs_divider="true" />

        <com.wo2b.wrapper.view.XPreference
            android:id="@+id/xp_grade_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/grade_current"
            app:position="last" />

        <com.wo2b.wrapper.view.XPreference
            android:id="@+id/xp_user_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/theme_xp_margin"
            app:label="@string/user_exp"
            app:position="top"
            app:prefs_divider="true" />

        <com.wo2b.wrapper.view.XPreference
            android:id="@+id/xp_user_gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/user_gold"
            app:position="last"
            app:prefs_divider="true" />

        <com.wo2b.wrapper.view.XPreference
            android:id="@+id/xp_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/theme_xp_margin"
            app:label="@string/email"
            app:position="top"
            app:prefs_divider="true" />

        <com.wo2b.wrapper.view.XPreference
            android:id="@+id/xp_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/tel"
            app:position="middle"
            app:prefs_divider="true" />

        <com.wo2b.wrapper.view.XPreference
            android:id="@+id/xp_register_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:indicator_state="none"
            app:label="@string/register_app"
            app:position="last"
            app:prefs_divider="true" />

        <Button
            android:id="@+id/btn_exit_login"
            style="@style/global_btn_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_xp_margin"
            android:layout_marginRight="@dimen/common_xp_margin"
            android:layout_marginTop="20dp"
            android:text="@string/logout_safe" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:contentDescription="@string/null_image"
            android:gravity="center"
            android:src="@drawable/we_have_a_dream"
            android:visibility="gone" />
    </LinearLayout>

</com.opencdk.view.swiperefresh.SwipeRefreshScrollView>