<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listview_grey"
    android:paddingBottom="9dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/null_image"
        android:scaleType="centerCrop"
        android:src="@drawable/warn_image_loading" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_toRightOf="@id/image"
        android:includeFontPadding="false"
        android:text="Album Name"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/image"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="Album Desc"
        android:textColor="#888888"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/picnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/selector_preference_arrow"
        android:textColor="#888888"
        android:textSize="12sp" />

</RelativeLayout>